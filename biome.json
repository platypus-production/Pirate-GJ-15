{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"files": {
		"ignore": ["dist/**", ".vscode/**"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noDebugger": "info",
				"noConsoleLog": "info"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
